<%
  if @customer.id
    url    = customer_path @customer.id
    method = :put
  else
    url    = customer_index_path
    method = :post
  end
%>
<h1><%= @title %></h1>
<div class="mform">
  <% form_for @customer, :url => url, :method => method do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name, 'Jméno' %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :surname, 'Příjmení' %>
      <%= f.text_field :surname %>
    </p>
    <p>
      <%= f.label :email, 'E-mail' %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :phone, 'Telefon' %>
      <%= f.text_field :phone %>
    </p>
    <p>
      <%= f.label :street, 'Ulice a č.p.' %>
      <%= f.text_field :street %>
    </p>
    <p>
      <%= f.label :place, 'Město' %>
      <%= f.text_field :place %>
    </p>
    <p>
      <%= f.label :post_code, 'PSČ' %>
      <%= f.text_field :post_code %>
    </p>
    <p>
      <%= f.submit @customer.id ? 'Uložit' : 'Registrovat se' %>
    </p>
  <% end %>    
</div>
