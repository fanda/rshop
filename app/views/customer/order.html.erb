<h1><%= @title %></h1>
<table class="listing">
  <thead>
    <tr>
      <th>Název</th>
      <th>Kusů</th>
      <th>Cena za kus</th>
      <th>Cena</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="3"><b>Celkem</b></td>
      <td><b><%= format_price(@order.sum) %></b></td>
    </tr>
  </tfoot>
  <tbody id="objednavka">
    <% @products.each do |product| %>
    <tr>
      <td class="col140width">
        <%= product.title %>
      </td>
      <td>
        <%= product.count %>
      </td>
      <td>
        <%= format_price(product.price) %>
      </td>
      <td>
        <b><%= format_price(product.cost) %></b>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
