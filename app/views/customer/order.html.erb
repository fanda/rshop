<h1><%= @title %></h1>
<table id="cart" style='width:95%'>
  <thead>
    <tr>
      <th class="tal">Název</th>
      <th class="tac">Kusů</th>
      <th class="tar">Cena</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="2"><b>Celkem</b></td>
      <td class="tar"><b><%= format_price(@order.sum) %></b></td>
    </tr>
  </tfoot>
  <tbody id="objednavka">
    <% @products.each do |product| %>
    <tr>
      <td class="tal">
        <%= product.title %>
      </td>
      <td class="tac">
        <%= product.count %>
      </td>
      <td class="tar">
        <%= format_price(product.cost) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
