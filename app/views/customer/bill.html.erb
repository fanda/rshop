<div>
  <h2>Odběratel</h2>
  <address>
    <%= @customer[:name] %> <%= @customer[:surname] %><br />
    <%= @customer[:street] %><br />
    <%= @customer[:place] %><br />
    <%= @customer[:post_code] %>
  </address>
</div>

 
<h2>Zboží</h2>
<table cellspacing="7" cellpadding="4">
  <tr style="font-weight:bold; text-align:center;">
    <td>Název</td>
    <td>Počet KS</td>
    <td>Cena za kus</td>
    <td>Cena</td>
  </tr>

<% @items.each do |item| %>
  <tr style="text-align:center;">
    <td class="col140width" style="text-align:left;">
      <%= item.product.title %>
    </td>
    <td>
      <%= item.amount %>
    </td>
    <td>
      <%= format_price(item.product.price) %>
    </td>
    <td style="text-align:right;">
      <b><%= format_price(item.price) %></b>
    </td>
  </tr>
<% end %>

  <tr style="text-align:center;border-top:#000 solid 1px;">
    <td></td>
    <td></td>
    <td><b>Celkem</b></td>
    <td style="text-align:right;">
      <b><%= format_price(@order.sum) %></b>
    </td>
  </tr>
</table>
