<%
  if resource.id
    url    = customer_index_path
    method = :put
  else
    url    = register_path
    method = :post
  end
%>
<h1><%= @title %></h1>
<div class="mform">
  <%= form_for resource, :url => url, :method => method do |f| %>
    <%#= devise_error_messages %>

    <fieldset><legend>Jméno a adresa</legend>
    <p>
      <%= f.label :name, 'Jméno' %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :surname, 'Příjmení' %>
      <%= f.text_field :surname %>
    </p>
    <p>
      <%= f.label :email, 'E-mail' %>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :phone, 'Telefon' %>
      <%= f.text_field :phone %>
    </p>
    <p>
      <%= f.label :street, 'Ulice a č.p.' %>
      <%= f.text_field :street %>
    </p>
    <p>
      <%= f.label :place, 'Město' %>
      <%= f.text_field :place %>
    </p>
    <p>
      <%= f.label :post_code, 'PSČ' %>
      <%= f.text_field :post_code %>
    </p>
    </fieldset>

    <fieldset><legend>Přihlašovací údaje</legend>
      <div><%= f.label :email %><br />
      <%= f.email_field :email %></div>

      <div><%= f.label :password %> <i>(nechte prázdné, pokud zůstane stejné)</i><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>
    </fieldset>
    <p>
      <div><%= f.label :current_password %> <i>(pro potvrzení změn je potřeba heslo)</i><br />
      <%= f.password_field :current_password %></div>
      <%= f.submit @customer.id ? 'Uložit' : 'Registrovat se' %>
    </p>
  <% end %>
</div>
