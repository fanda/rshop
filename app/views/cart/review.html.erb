<h1>Vytvoření objednávky</h1>
<h2>Výrobky, které objednáváte</h2>
<table class="listing">
  <thead>
    <tr>
    <th>Výrobek</th>
    <th>KS</th>
    <th>Cena za KS</th>
    <th>Cena<br/>s DPH</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan="3"><b>Celkem za zboží</b></td>
      <td><b id="sum"><%= format_price @order.sum %></b></td>
    </tr>
  </tfoot>
  <tbody id="order_review">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td class="col70width"><%= product.count %></td>
        <td class="col100width"><%= format_price product.price %></td>
        <td class="col100width"><%= format_price product.cost %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="total" class="dis">
  <h1>Cena celkem včetně poštovného: <span><%= @order.sum %></span> <%= AppConfig.currency %></h1>
</div>

<div class="mform oform">
  <%= semantic_form_for @order, :url => order_path do |of| %>
    <%= of.hidden_field :id, :value => @order.id %>

    <%#= of.error_messages %>
    <%= of.inputs :name => 'Způsob platby' do %>
      <%= of.input :payment_method, :as => :radio, :label => false,
                   :collection => PaymentMethod.options %>
    <% end %>

    <%= of.semantic_fields_for :customer do |f| %>
     <%= f.inputs :name => 'Kontakt' do %>
      <%= f.input :email %>
      <%= f.input :phone %>
     <% end %>

     <%= f.inputs :name => 'Adresa' do %>
      <%= f.input :name %>
      <%= f.input :surname %>
      <%= f.input :street %>
      <%= f.input :place %>
      <%= f.input :post_code, :size => 6, :maxlength => 6 %>
     <% end %>
    <% end %>
    <br/>
    <%#= render :partial => 'invoice_address_form',
               :locals => { :of => of } %>
    <br/>
    <%= of.inputs :name => 'Zpráva pro nás' do %>
      <%= of.text_area :message, :value => @order.message, :cols => 40, :rows => 3 %>
    <% end %>
    <br/>
    <%= of.commit_button "Vytvořit objednávku" %>
  <% end %>
</div>
