$("#customer_email").attr('value', '<%= @user_info['email'] %>');
<% if @user_info['address'] %>
  <% addr = @user_info['address']  %>
  $("#customer_post_code").attr('value', '<%= addr['post_code'] %>');
  $("#customer_place").attr('value', '<%= addr['place'] %>');
  $("#customer_street").attr('value', '<%= addr['street'] %>');
  $("#customer_surname").attr('value', '<%= addr['surname'] %>');
  $("#customer_name").attr('value', '<%= addr['name'] %>');
  $("#customer_phone").attr('value', '<%= addr['phone'] %>');
<% end %>
$("#cart_step1_pin").attr("disabled", true);
