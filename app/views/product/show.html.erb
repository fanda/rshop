<div id="product">
  <h2><%= @product.title %></h2>

  <div id="product_meta" class="left">
    <%= into_cart_link @product if @product.amount != 0 %>
  </div>

  <div id="product_image" class="right tac">
    <%= link_to image_tag(@product.picture.url), @product.picture.url(:original), :rel => 'facebox', :title => 'Kliknutím zvětšíte' %>
  </div>

  <div id="product_about" class="left lpad">
    <p id="product_description"><%= @product.full_description %></p>
  </div>

  <div class="out"></div>
</div>

<br class="out"/>
<% if false and @category and @products.any? %>
<h2>
  Další výrobky v kategorii
  <%= link_to @category.title, catalog_path(@category.id) %>
</h2>
<div id="related_products">
  <%= render :partial => 'table' %>
</div>
<% end %>
