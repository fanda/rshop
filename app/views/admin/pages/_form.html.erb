<%= semantic_form_for @page, :url => admin_page_path(@page)  do |f| %>

  <%= f.inputs do %>
    <%= f.input :title  %>
    <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full',:language => 'cs'} }
    %>
  <% end %>

  <%= f.actions do %>
    <%= f.button :button_html => {:class => "btn"} %>
  <% end %>

<% end %>
